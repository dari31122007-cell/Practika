<Window x:Class="Practika.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid Background="#000C3B">
        <!-- Верхняя панель -->
        <Rectangle HorizontalAlignment="Center" Height="36" Fill="#FFFFFF" VerticalAlignment="Top" Width="800" Opacity="0.3"/>

        <!-- Логотип BMW -->
        <Button HorizontalAlignment="Left" Margin="10,-2,0,0" VerticalAlignment="Top" Height="40" Width="59"
            BorderBrush="{x:Null}" 
                Foreground="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="/BMW.png"/>
            </Button.Background>
        </Button>

        <!-- Текст рядом с логотипом -->
        <TextBlock HorizontalAlignment="Left" Margin="72,6,0,0" VerticalAlignment="Top"
               FontFamily="Book Antiqua" Text="BMW" FontSize="13" FontWeight="Medium" Foreground="#FFD7DBE8"/>
        <TextBlock HorizontalAlignment="Left" Margin="72,20,0,0" VerticalAlignment="Top"
               FontFamily="Book Antiqua" Text="Официальный дилер в СПБ" FontSize="9" FontWeight="Medium" Foreground="#FFD7DBE8"/>

        <!-- Адрес по центру -->
        <TextBlock HorizontalAlignment="Center" Margin="0,12,0,0" VerticalAlignment="Top"
               FontFamily="Book Antiqua" Text="ул.Пушкина, 125" FontSize="10" FontWeight="Medium" Foreground="#FFD7DBE8"/>

        <!-- Кнопка "Профиль" -->
        <Button Content="Профиль" HorizontalAlignment="Left" Margin="650,6,0,0" VerticalAlignment="Top"
            Width="92" Height="24" FontSize="11" BorderBrush="White" Foreground="#FFD7DAE8" Background="{x:Null}"
            Click="Button_Click_1"
                />

        <!-- Кнопка меню (бургер) -->
        <Button HorizontalAlignment="Left" Margin="749,3,0,0" VerticalAlignment="Top"
            Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}" Click="BurgerButton_Click">
            <Image Source="/bitcoin-icons_menu-filled.png" Stretch="Fill" Width="28" Height="26"/>
        </Button>

        <!-- Фоновое изображение -->
        <Rectangle HorizontalAlignment="Center" Height="227" Margin="0,41,0,0" VerticalAlignment="Top" Width="780">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/clouds-e92-bmw 1.png"/>
            </Rectangle.Fill>
        </Rectangle>

        <!-- Блок "Записаться на консультацию" -->
        <Rectangle HorizontalAlignment="Left" Height="118" Margin="29,281,0,0" VerticalAlignment="Top"
               Width="411" Fill="#EFF2FC" Stroke="#98A8E5" Opacity="0.9" RadiusX="30" RadiusY="30"/>
        <TextBlock HorizontalAlignment="Left" Margin="130,295,0,0" VerticalAlignment="Top"
               FontFamily="Book Antiqua" Text="Записаться на консультацию" FontSize="15" FontWeight="Medium"
               Foreground="#FF000C3B"/>

        <!-- ПОЛЯ ВВОДА -->
        <TextBox x:Name="NameTextBox"
             HorizontalAlignment="Left" Margin="65,328,0,0" VerticalAlignment="Top"
             Width="196" Height="22" Text="Введите имя" FontSize="9"
             HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
             Background="{x:Null}" BorderBrush="#FF000C3B" Foreground="#FF000C3B"
             GotFocus="InputBox_GotFocus"/>

        <TextBox x:Name="PhoneTextBox"
             HorizontalAlignment="Left" Margin="65,355,0,0" VerticalAlignment="Top"
             Width="196" Height="22" Text="Введите номер" FontSize="9"
             HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
             Background="{x:Null}" BorderBrush="#FF000C3B" Foreground="#FF000C3B"
             GotFocus="InputBox_GotFocus"/>

        <!-- Кнопка отправки -->
        <Button Content="Отправить" HorizontalAlignment="Left" Margin="303,339,0,0" VerticalAlignment="Top"
            Width="114" Height="25" Background="#FF000C3B" BorderBrush="#FF8998D4" Foreground="#FFD7DAE8"
            FontSize="11" Click="SubmitButton_Click"/>

        <!-- Изображение справа -->
        <Rectangle HorizontalAlignment="Left" Height="133" Margin="445,281,0,0" VerticalAlignment="Top" Width="324">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/Group 8 (1).png"/>
            </Rectangle.Fill>
        </Rectangle>
    </Grid>
</Window>