<Window x:Class="Practika.EditProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактировать профиль" Height="300" Width="400">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Фамилия" Margin="0,0,0,5"/>
            <TextBox x:Name="SurnameBox" Margin="0,0,0,10"/>

            <TextBlock Text="Имя" Margin="0,0,0,5"/>
            <TextBox x:Name="NameBox" Margin="0,0,0,10"/>

            <TextBlock Text="Отчество" Margin="0,0,0,5"/>
            <TextBox x:Name="PatronymicBox" Margin="0,0,0,10"/>

            <TextBlock Text="Дата рождения" Margin="0,0,0,5"/>
            <DatePicker x:Name="BirthDatePicker" Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Сохранить" Click="SaveButton_Click" Width="80" Margin="0,0,10,0"/>
                <Button Content="Отмена" Click="CancelButton_Click" Width="80"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>