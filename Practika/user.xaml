<Window x:Class="Practika.user"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Настройки профиля" Height="380" Width="480"
        WindowStartupLocation="CenterOwner">
    <Grid Background="#FFE0E4F0" Margin="15">
        <TextBlock Text="Настройки профиля пользователя"
                   FontSize="16" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,10,0,0"/>

        <StackPanel Margin="0,50,0,0" HorizontalAlignment="Center" Width="350">
            <TextBlock Text="ФИО" Margin="0,0,0,5"/>
            <TextBox x:Name="FullNameBox" Height="26" />

            <TextBlock Text="Email" Margin="0,10,0,5"/>
            <TextBox x:Name="EmailBox" Height="26" />

            <TextBlock Text="Телефон" Margin="0,10,0,5"/>
            <TextBox x:Name="PhoneBox" Height="26" />

            <TextBlock Text="Дата рождения" Margin="0,10,0,5"/>
            <DatePicker x:Name="BirthDatePicker" Height="26" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="Сохранить" Width="100" Height="28" Click="Button_Click1" Margin="0,0,10,0"/>
                <Button Content="Отмена" Width="100" Height="28" Click="Button_Click2"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>