<Window x:Class="Practika.Window3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Window3" Height="450" Width="800">

    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF19244E"/>
            <GradientStop Color="#FFEFF2FC" Offset="0.7"/>
            <GradientStop Color="#FF0C0C0C" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid Background="#FF19244E">
        <!-- Верхняя панель -->
        <Rectangle HorizontalAlignment="Center" Height="36" Fill="#FFFFFF" VerticalAlignment="Top" Width="800" Opacity="0.3"/>

        <!-- Кнопка меню -->
        <Button HorizontalAlignment="Left" Margin="749,3,0,0" VerticalAlignment="Top" 
                Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}" Click="Button_Click_3"/>

        <!-- Логотип BMW -->
        <Button HorizontalAlignment="Left" Margin="10,-2,0,0" VerticalAlignment="Top" 
                Height="40" Width="59" BorderBrush="{x:Null}" Foreground="{x:Null}" Click="Button_Click_5">
            <Button.Background>
                <ImageBrush ImageSource="/BMW.png"/>
            </Button.Background>
        </Button>

        <!-- Текст логотипа -->
        <TextBlock HorizontalAlignment="Left" Margin="72,6,0,0" VerticalAlignment="Top" 
                   FontFamily="Book Antiqua" Text="BMW" FontSize="13" FontWeight="Medium" 
                   Foreground="#FFD7DBE8" Height="18" Width="35"/>
        <TextBlock HorizontalAlignment="Left" Margin="72,20,0,0" VerticalAlignment="Top" 
                   FontFamily="Book Antiqua" Text="Официальный дилер в СПБ" FontSize="9" 
                   FontWeight="Medium" Foreground="#FFD7DBE8" Height="16" Width="164"/>

        <!-- Адрес -->
        <TextBlock HorizontalAlignment="Center" Margin="0,12,0,0" VerticalAlignment="Top" 
                   FontFamily="Book Antiqua" Text="ул.Пушкина, 125" FontSize="10" 
                   FontWeight="Medium" Foreground="#FFD7DBE8" Height="16" Width="80"/>

        <!-- Кнопка "Профиль" -->
        <Button Content="Профиль" HorizontalAlignment="Left" Margin="650,6,0,0" VerticalAlignment="Top" 
                Width="92" Height="24" BorderBrush="White" Foreground="#FFD7DAE8" FontSize="11" 
                Background="{x:Null}" Click="Button_Click"/>

        <!-- Фон карточки -->
        <Rectangle HorizontalAlignment="Center" Height="360" Margin="0,45,0,0" 
                   VerticalAlignment="Top" Width="766" Fill="#FFEFF2FC" Opacity="0.95" Stroke="Black"/>

        <!-- Изображение авто -->
        <Rectangle HorizontalAlignment="Left" Height="275" Margin="46,83,0,0" 
                   VerticalAlignment="Top" Width="367">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/0 9.png"/>
            </Rectangle.Fill>
        </Rectangle>

        <!-- Правая панель характеристик -->
        <Rectangle HorizontalAlignment="Left" Height="197" Margin="438,107,0,0" 
                   VerticalAlignment="Top" Width="324" Stroke="#FF19244E" RadiusX="15" RadiusY="15"/>

        <!-- Текстовые блоки -->
        <TextBlock HorizontalAlignment="Left" Margin="458,124,0,0" VerticalAlignment="Top" 
                   FontFamily="Book Antiqua" Text="BMW 3 серии  GT 320i xDrive" 
                   FontWeight="Bold" Foreground="#FF19244E" FontSize="16" Height="18" Width="229"/>
        <TextBlock HorizontalAlignment="Left" Margin="696,130,0,0" VerticalAlignment="Top" 
                   FontFamily="Book Antiqua" Text="2014" FontWeight="Bold" 
                   Foreground="#FF19244E" FontSize="9" Opacity="0.507" Height="10" Width="20"/>
        <TextBlock HorizontalAlignment="Left" Margin="500,149,0,0" VerticalAlignment="Top" 
                   FontFamily="Book Antiqua" Text="2 л., 184 л.с., Бензин" 
                   FontWeight="Medium" Foreground="#FF19244E" FontSize="11" Height="13" Width="104"/>
        <TextBlock HorizontalAlignment="Left" Margin="500,169,0,0" VerticalAlignment="Top" 
                   FontFamily="Book Antiqua" Text="АКПП" 
                   FontWeight="Medium" Foreground="#FF19244E" FontSize="11" Height="11" Width="35"/>
        <TextBlock HorizontalAlignment="Left" Margin="500,187,0,0" VerticalAlignment="Top" 
                   FontFamily="Book Antiqua" Text="Полный привод" 
                   FontWeight="Medium" Foreground="#FF19244E" FontSize="11" Height="14" Width="88"/>
        <TextBlock HorizontalAlignment="Left" Margin="500,208,0,0" VerticalAlignment="Top" 
                   FontFamily="Book Antiqua" Text="188 826 км" 
                   FontWeight="Medium" Foreground="#FF19244E" FontSize="11" Height="11" Width="54"/>
        <TextBlock HorizontalAlignment="Left" Margin="500,230,0,0" VerticalAlignment="Top" 
                   FontFamily="Book Antiqua" Text="2 владельца" 
                   FontWeight="Medium" Foreground="#FF19244E" FontSize="11" Height="14" Width="62"/>
        <TextBlock HorizontalAlignment="Left" Margin="500,252,0,0" VerticalAlignment="Top" 
                   FontFamily="Book Antiqua" Text="Синий цвет" 
                   FontWeight="Medium" Foreground="#FF19244E" FontSize="11" Height="12" Width="72"/>
        <TextBlock HorizontalAlignment="Left" Margin="500,273,0,0" VerticalAlignment="Top" 
                   FontFamily="Book Antiqua" Text="Черный кожаный салон" 
                   FontWeight="Medium" Foreground="#FF19244E" FontSize="11" Height="12" Width="126"/>

        <!-- Иконки -->
        <Image Margin="480,150,309,272" Source="/hugeicons_fuel.png" Stretch="Fill"/>
        <Image Margin="481,170,309,254" Source="/solar_transmission-bold.png" Stretch="Fill"/>
        <Image Margin="480,187,308,235" Source="/fluent_drive-train-20-filled.png" Stretch="Fill"/>
        <Image Margin="481,209,309,215" Source="/ion_speedometer-sharp.png" Stretch="Fill"/>
        <Image Margin="480,229,308,192" Source="/mdi_user.png" Stretch="Fill"/>
        <Image Margin="481,254,308,169" Source="/Ellipse 31.png" Stretch="Fill"/>
        <Image Margin="481,275,308,148" Source="/Ellipse 32.png" Stretch="Fill"/>

        <!-- Цена и кнопки -->
        <TextBlock HorizontalAlignment="Left" Margin="470,312,0,0" VerticalAlignment="Top" 
                   FontFamily="Book Antiqua" Text="1 699 000 P" 
                   FontWeight="Bold" Foreground="#FF19244E" FontSize="16" Height="18" Width="85"/>

        <Button Content="В избранное" HorizontalAlignment="Left" Margin="603,314,0,0" VerticalAlignment="Top" Click="Button_Click_1"/>
        <Button Content="В корзину" HorizontalAlignment="Left" Margin="682,314,0,0" VerticalAlignment="Top" Click="Button_Click_2"/>
        <Button Content="Задать вопрос" HorizontalAlignment="Left" Margin="682,372,0,0" VerticalAlignment="Top" Click="Button_Click_3"/>

        <Button
            Width="35" 
            VerticalAlignment="Top" 
            Margin="730,59,0,0"
            HorizontalAlignment="Left" 
            Content="" 
           FontSize="10" 
            Height="29" 
            BorderBrush="{x:Null}"
            Click="Button_Click_4">
            <Button.Background>
                <ImageBrush ImageSource="/ri_add-large-fill.png"/>
            </Button.Background>

        </Button>
    </Grid>
</Window>