<Window x:Class="Practika.Admin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practika"
        mc:Ignorable="d"
        Title="Настройки профиля" Height="481" Width="500"
         WindowStartupLocation="CenterOwner">
    <Grid Background="#FFE0E4F0" Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Настройки профиля администратора"
                   FontSize="16" FontWeight="Bold"
                   HorizontalAlignment="Left" Margin="90,28,0,329"/>

        <StackPanel Margin="0,63,0,-13" HorizontalAlignment="Center" Width="350">
            <TextBlock Text="ФИО" Margin="0,0,0,5"/>
            <TextBox x:Name="FullNameBox" Height="26" Text="Иванов Иван Иванович"/>

            <TextBlock Text="Логин" Margin="0,10,0,5"/>
            <TextBox x:Name="LoginBox" Height="26" Text="Admin"/>

            <TextBlock Text="Email" Margin="0,10,0,5"/>
            <TextBox x:Name="EmailBox" Height="26" Text="admin"/>

            <TextBlock Text="Телефон" Margin="0,10,0,5"/>
            <TextBox x:Name="PhoneBox" Height="26" Text="+7 (999) 123-45-67"/>

            <TextBlock Text="Должность" Margin="0,10,0,5"/>
            <TextBox x:Name="PositionBox" Height="26" Text="Администратор автосалона"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="Сохранить" Width="100" Height="28" Click="Button_Click1" Margin="0,0,10,0"/>
                <Button Content="Отмена" Width="100" Height="28" Click="Button_Click2"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
