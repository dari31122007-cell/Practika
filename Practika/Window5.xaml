<Window x:Class="Practika.Window5"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Window5" Height="450" Width="800">

    <Canvas>
        <!-- Фон -->
        <Canvas.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF0D163C"/>
                <GradientStop Color="#FF323D6E" Offset="0.33"/>
                <GradientStop Color="#FF6D77A0" Offset="0.653"/>
                <GradientStop Color="#FFC5C8D5" Offset="0.991"/>
                <GradientStop Color="#FF1F1F1F" Offset="1"/>
            </LinearGradientBrush>
        </Canvas.Background>

        <!-- Верхняя панель -->
        <Rectangle Width="800" Height="36" Fill="#FFFFFF" Opacity="0.3" Canvas.Left="0" Canvas.Top="0"/>

        <!-- Логотип BMW -->
        <Button Width="59" Height="40" Canvas.Left="10" Canvas.Top="-2" 
              BorderBrush="{x:Null}" Foreground="{x:Null}" Click="Button_Click">
            <Button.Background>
                <ImageBrush ImageSource="/BMW.png"/>
            </Button.Background>
        </Button>

        <!-- Текст рядом с логотипом -->
        <TextBlock FontFamily="Book Antiqua" Text="BMW" FontSize="13" FontWeight="Medium" 
                   Foreground="#FFD7DBE8" Width="35" Height="18" Canvas.Left="72" Canvas.Top="6"/>
        <TextBlock FontFamily="Book Antiqua" Text="Официальный дилер в СПБ" FontSize="9" FontWeight="Medium" 
                   Foreground="#FFD7DBE8" Width="164" Height="16" Canvas.Left="72" Canvas.Top="20"/>

        <!-- Адрес -->
        <TextBlock FontFamily="Book Antiqua" Text="ул.Пушкина, 125" FontSize="10" FontWeight="Medium" 
                   Foreground="#FFD7DBE8" Width="80" Height="16" Canvas.Left="693" Canvas.Top="10"/>

        <!-- Пустая кнопка в углу -->

        <!-- Фон формы регистрации -->
        <Rectangle Width="336" Height="219" Fill="#FFC3C6D4" RadiusX="20" RadiusY="20" StrokeThickness="2" 
                   Canvas.Left="232" Canvas.Top="114">
            <Rectangle.Stroke>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF1C2651" Offset="1"/>
                    <GradientStop Color="#FFAAAFC5" Offset="1"/>
                    <GradientStop Color="#FF9399B3" Offset="0.03"/>
                </LinearGradientBrush>
            </Rectangle.Stroke>
        </Rectangle>

        <!-- Поля ввода с ИМЕНАМИ -->
        <TextBox x:Name="NameBox" Width="171" Height="20" Canvas.Left="372" Canvas.Top="161"/>
        <TextBox x:Name="ContactBox" Width="171" Height="20" Canvas.Left="372" Canvas.Top="191"/>
        <DatePicker x:Name="BirthDatePicker" Width="171" Height="26" Canvas.Left="372" Canvas.Top="217" BorderBrush="{x:Null}"/>
        <PasswordBox x:Name="PasswordBox" Width="171" Height="17" Canvas.Left="372" Canvas.Top="248"/>

        <!-- Надписи -->
        <TextBlock Text="Введите ваше имя" FontSize="9" Canvas.Left="246" Canvas.Top="165"/>
        <TextBlock Text="Введите ваш номер/почту" FontSize="9" Canvas.Left="246" Canvas.Top="195"/>
        <TextBlock Text="Введите вашу дату рождения" FontSize="9" Canvas.Left="246" Canvas.Top="224"/>
        <TextBlock Text="Придумайте пароль" FontSize="9" Canvas.Left="246" Canvas.Top="251"/>

        <!-- Заголовок -->
        <TextBlock Text="Регистрация" FontSize="14" Foreground="#FF19234D" 
                   Canvas.Left="360" Canvas.Top="128"/>


        <Button Content="У вас уже есть аккаунт?" FontSize="6" Foreground="#FF1A244E" 
                Background="{x:Null}" BorderBrush="{x:Null}" 
                Canvas.Left="365" Canvas.Top="311" Click="LoginButton_Click"/>
        <Button Width="128" Height="25" Canvas.Left="336" Canvas.Top="281" Content="Зарегистрироваться" Click="Button_Click_3" HorizontalAlignment="Left" VerticalAlignment="Center" Background="White">
            <Button.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Button.BorderBrush>
        </Button>
    </Canvas>
</Window>