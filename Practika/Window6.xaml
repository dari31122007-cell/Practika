<Window x:Class="Practika.Window6"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Window6" Height="450" Width="800">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF0D163C"/>
                <GradientStop Color="#FF323D6E" Offset="0.33"/>
                <GradientStop Color="#FF6D77A0" Offset="0.653"/>
                <GradientStop Color="#FFC5C8D5" Offset="0.991"/>
                <GradientStop Color="#FF1F1F1F" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>


        <Rectangle Height="36" Fill="#FFFFFF" VerticalAlignment="Top" Width="800" Opacity="0.3" HorizontalAlignment="Center"/>

        <Button HorizontalAlignment="Left" VerticalAlignment="Top" Width="59" Height="40"
                Margin="10,-2,0,0" BorderBrush="{x:Null}" Foreground="{x:Null}" Click="Button_Click_2">
            <Button.Background>
                <ImageBrush ImageSource="/BMW.png"/>
            </Button.Background>
        </Button>

        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="72,6,0,0"
                   FontFamily="Book Antiqua" Text="BMW" FontSize="13" FontWeight="Medium" Foreground="#FFD7DBE8"/>
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="72,20,0,0"
                   FontFamily="Book Antiqua" Text="Официальный дилер в СПБ" FontSize="9" FontWeight="Medium" Foreground="#FFD7DBE8"/>

        <TextBlock HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,36,0"
                   FontFamily="Book Antiqua" Text="ул.Пушкина, 125" FontSize="10" FontWeight="Medium" Foreground="#FFD7DBE8"/>

        <Button HorizontalAlignment="Right" VerticalAlignment="Top" Width="30" Height="30"
                Margin="0,3,10,0" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}"/>

        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="336" Height="199">
            <Rectangle Fill="#FFC3C6D4" RadiusX="20" RadiusY="20" StrokeThickness="2" Margin="0,-4,0,4">
                <Rectangle.Stroke>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF1C2651" Offset="1"/>
                        <GradientStop Color="#FFAAAFC5" Offset="1"/>
                        <GradientStop Color="#FF9399B3" Offset="0.03"/>
                    </LinearGradientBrush>
                </Rectangle.Stroke>
            </Rectangle>
            
            <TextBlock Text="Вход" HorizontalAlignment="Center" VerticalAlignment="Top"
                       Margin="0,1,0,0" FontSize="14" Foreground="#FF19234D"/>

            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Width="186">
                <TextBlock Text="Введите номер/почту" FontSize="10" Margin="0,0,0,4" HorizontalAlignment="Left"/>
                <TextBox x:Name="LoginBox" Height="26" TextChanged="TextBox_TextChanged" />
                <TextBlock Text="Введите пароль" FontSize="10" Margin="0,8,0,4" HorizontalAlignment="Left"/>
                <PasswordBox x:Name="PasswordBox" Height="26" />
                
                
                <Button Content="Войти" Height="26" Margin="0,12,0,6" Background="White" Foreground="#FF1B244F" Click="Button_Click_1">
                    <Button.BorderBrush>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF1B244F"/>
                            <GradientStop Color="White" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.BorderBrush>
                </Button>


                <Button Content="У вас нет аккаунта?" FontSize="6" Foreground="#FF1A244E"
                        Background="{x:Null}" BorderBrush="{x:Null}" HorizontalAlignment="Center"
                        Click="Button_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>