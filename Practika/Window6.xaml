<Window x:Class="Practika.Window6"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practika"
        mc:Ignorable="d"
        Title="Window6" 
        Height="450" 
        Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.Background>
            <LinearGradientBrush 
                EndPoint="0.5,1" 
                StartPoint="0.5,0">
                <GradientStop 
                    Color="#FF0D163C"/>
                <GradientStop 
                    Color="#FF323D6E" 
                    Offset="0.33"/>
                <GradientStop 
                    Color="#FF6D77A0" 
                    Offset="0.653"/>
                <GradientStop 
                    Color="#FFC5C8D5" 
                    Offset="0.991"/>
                <GradientStop 
                    Color="#FF1F1F1F" 
                    Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Rectangle 
            HorizontalAlignment="Center" 
            Height="36" 
            Fill="#FFFFFF" 
            VerticalAlignment="Top" 
            Width="800" 
            Opacity="0.3"/>
        <Button 
            HorizontalAlignment="Left" 
            Margin="749,3,0,0" 
            VerticalAlignment="Top" 
            BorderBrush="{x:Null}" 
            Foreground="{x:Null}" 
            Background="{x:Null}"/>
        <Button 
            Content="" 
            HorizontalAlignment="Left" 
            Margin="10,-2,0,0" 
            VerticalAlignment="Top" 
            Height="40" 
            Width="59" 
            BorderBrush="{x:Null}" 
            Foreground="{x:Null}">
            <Button.Background>
                <ImageBrush 
                    ImageSource="/BMW.png"/>
            </Button.Background>
        </Button>
        <TextBlock 
            HorizontalAlignment="Left" 
            Height="18" 
            Margin="72,6,0,0" 
            TextWrapping="Wrap" 
            FontFamily="Book Antiqua" 
            Text="BMW" 
            VerticalAlignment="Top" 
            Width="35" 
            RenderTransformOrigin="-0.857,-2.498" 
            FontWeight="Medium" 
            Foreground="#FFD7DBE8" 
            FontSize="13"/>
        <TextBlock 
            HorizontalAlignment="Left" 
            Height="16" 
            Margin="72,20,0,0" 
            TextWrapping="Wrap" 
            FontFamily="Book Antiqua"
            Text="Официальный дилер в СПБ"
            VerticalAlignment="Top" 
            Width="164" 
            RenderTransformOrigin="-0.857,-2.498"
            FontWeight="Medium"
            Foreground="#FFD7DBE8"
            FontSize="9"/>
        <TextBlock 
            HorizontalAlignment="Left"
            Height="16" 
            Margin="684,10,0,0" 
            TextWrapping="Wrap"
            FontFamily="Book Antiqua"
            Text="ул.Пушкина, 125"
            VerticalAlignment="Top"
            Width="80"
            RenderTransformOrigin="-0.857,-2.498"
            FontWeight="Medium"
            Foreground="#FFD7DBE8" 
            FontSize="10"/>
        <Rectangle 
            HorizontalAlignment="Center"
            Height="199"
            VerticalAlignment="Center"
            Width="336"
            Fill="#FFC3C6D4"
            RadiusX="20"
            RadiusY="20" 
            StrokeThickness="2">
            <Rectangle.Stroke>
                <LinearGradientBrush 
                    EndPoint="0.5,1" 
                    StartPoint="0.5,0">
                    <GradientStop 
                        Color="#FF1C2651" 
                        Offset="1"/>
                    <GradientStop 
                        Color="#FFAAAFC5" 
                        Offset="1"/>
                    <GradientStop 
                        Color="#FF9399B3" 
                        Offset="0.03"/>
                </LinearGradientBrush>
            </Rectangle.Stroke>
        </Rectangle>
        <TextBox 
            HorizontalAlignment="Left"
            Margin="359,177,0,0" 
            TextWrapping="Wrap"
            VerticalAlignment="Top"
            Width="186" 
            Height="26"/>
        <PasswordBox 
            HorizontalAlignment="Left" 
            Margin="359,213,0,0" 
            VerticalAlignment="Top"
            Width="186" 
            Height="26"
            Password=""/>
        <Button 
            Content="Войти" 
            HorizontalAlignment="Center"
            Margin="0,260,0,0" 
            VerticalAlignment="Top"
            Background="White" 
            Foreground="#FF1B244F"
            Width="83" 
            Click="Button_Click_1">
            <Button.BorderBrush>
                <LinearGradientBrush 
                    EndPoint="0.5,1"
                    StartPoint="0.5,0">
                    <GradientStop 
                        Color="#FF1B244F"/>
                    <GradientStop 
                        Color="White" 
                        Offset="1"/>
                </LinearGradientBrush>
            </Button.BorderBrush>
        </Button>
        <Button 
            Content="У вас нет аккаунта?"
            HorizontalAlignment="Center"
            Margin="0,285,0,0"
            VerticalAlignment="Top" 
            Foreground="#FF1A244E"
            BorderBrush="{x:Null}"
            Background="{x:Null}" 
            FontSize="6" 
            Click="Button_Click"/>
        <TextBlock 
            HorizontalAlignment="Left" 
            Margin="246,183,0,0" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top"
            FontSize="10" 
            RenderTransformOrigin="0.592,0.588">
            <Run 
                Text="Введите номер"/>
            <Run 
                Language="ru-ru" 
                 Text="/"/>
            <Run 
                Text="почту"/>
            <Run 
                Text=" "/>
        </TextBlock>
        <TextBlock 
            HorizontalAlignment="Left"
            Margin="246,219,0,0"
            TextWrapping="Wrap"
            VerticalAlignment="Top"
            FontSize="10"
            RenderTransformOrigin="0.539,0.56">
            <Run 
                Language="ru-ru" 
                 Text="Введите"/>
            <Run 
                Text=" пароль"/>
        </TextBlock>
        <TextBlock 
            HorizontalAlignment="Center"
            Margin="0,137,0,0"
            TextWrapping="Wrap"
            VerticalAlignment="Top"
            FontSize="14"
            Foreground="#FF19234D">
            <Run 
                Language="ru-ru" 
                 Text="Вход"/>
        </TextBlock>

    </Grid>
</Window>
