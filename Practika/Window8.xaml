<Window x:Class="Practika.Window8"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practika"
        mc:Ignorable="d"
        Title="Window8" Height="450" Width="800">
    <Canvas Background="#FFE0E4F0">
        <!-- Верхняя панель -->
        <Rectangle Canvas.Left="0" Canvas.Top="0" Width="800" Height="36" Fill="#FF19234D" Opacity="0.9"/>

        <!-- Кнопка корзины (справа вверху) -->
        <Button Canvas.Left="653" Canvas.Top="0" Background="{x:Null}" BorderBrush="{x:Null}">
            <Image Height="27" Source="/akar-icons_basket.png" Stretch="Fill" Width="29"/>
        </Button>

        <!-- Логотип BMW -->
        <Button Canvas.Left="10" Canvas.Top="-2" Height="40" Width="59" BorderBrush="{x:Null}" Foreground="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="/BMW.png"/>
            </Button.Background>
        </Button>

        <!-- Текст "BMW" -->
        <TextBlock Canvas.Left="72" Canvas.Top="6" Height="18" Width="35"
                   FontFamily="Book Antiqua" Text="BMW" FontSize="13" FontWeight="Medium" Foreground="#FFD7DBE8"/>
        <TextBlock Canvas.Left="72" Canvas.Top="20" Height="16" Width="131"
                   FontFamily="Book Antiqua" Text="Официальный дилер в СПБ" FontSize="9" FontWeight="Medium" Foreground="#FFD7DBE8"/>
        <TextBlock Canvas.Left="360" Canvas.Top="12" Height="16" Width="80" 
                   FontFamily="Book Antiqua" Text="ул.Пушкина, 125" FontSize="10" FontWeight="Medium" Foreground="#FFD7DBE8"/>

        <!-- Профиль -->
        <Button Content="Профиль" Canvas.Left="691" Canvas.Top="6" Width="92" Height="24"
                BorderBrush="White" Foreground="#FFD7DAE8" FontSize="11" Background="{x:Null}" Click="Button_Click"/>

        <!-- Заголовок "Избранное" -->
        <TextBlock Canvas.Left="63" Canvas.Top="76" FontSize="18" FontWeight="Bold">
            <Run Language="ru-ru" Text="Избранное"/>
        </TextBlock>

        <!-- Карточка 1: фон -->
        <Rectangle Canvas.Left="52" Canvas.Top="134" Width="192" Height="215" Fill="White" Opacity="0.5"
                   Stroke="#FF2D375E" RadiusX="20" RadiusY="20"/>
        <!-- Изображение 1 -->
        <Rectangle Canvas.Left="52" Canvas.Top="139" Width="192" Height="143">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/0 (3) 1 (1).png"/>
            </Rectangle.Fill>
        </Rectangle>
        <!-- Текст 1 -->
        <TextBlock Canvas.Left="63" Canvas.Top="276" Height="14" Width="109"
                   FontFamily="Book Antiqua" Text="BMW 2 серии Gran Coupe" FontSize="9" FontWeight="Medium" Foreground="Black"/>
        <TextBlock Canvas.Left="63" Canvas.Top="289" Height="14" Width="22"
                   FontFamily="Book Antiqua" Text="2025" FontSize="7" FontWeight="Medium" Foreground="Black" Opacity="0.5"/>
        <TextBlock Canvas.Left="63" Canvas.Top="300" Height="15" Width="44"
                   FontFamily="Book Antiqua" Text="6 390 000 P" FontSize="8" FontWeight="Medium" Foreground="Black"/>
        <!-- Кнопка "в корзину" 1 -->
        <Button Content="Добавить в корзину" Canvas.Left="79" Canvas.Top="318" Width="93" Height="21" FontSize="6" Background="White"/>
        <!-- Прозрачные кнопки для кликов -->
        <Button Canvas.Left="55" Canvas.Top="133" Width="186" Height="135" BorderBrush="{x:Null}" Background="{x:Null}" Foreground="{x:Null}" Click="Button_Click"/>
        <Button Canvas.Left="190" Canvas.Top="314" Width="35" Height="32" BorderBrush="{x:Null}" Background="{x:Null}" Foreground="{x:Null}"/>
        <Image Canvas.Left="190" Canvas.Top="314" Width="34" Height="29" Source="/mdi_heart (2).png" Stretch="Fill"/>

        <!-- Карточка 2 -->
        <Rectangle Canvas.Left="260" Canvas.Top="133" Width="194" Height="216" Fill="White" Opacity="0.5"
                   Stroke="#FF2D375E" RadiusX="20" RadiusY="20"/>
        <Rectangle Canvas.Left="260" Canvas.Top="137" Width="194" Height="142">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/0 10 (1).png"/>
            </Rectangle.Fill>
        </Rectangle>
        <TextBlock Canvas.Left="278" Canvas.Top="273" Height="14" Width="62"
                   FontFamily="Book Antiqua" FontSize="9" FontWeight="Medium" Foreground="Black">
            <Run Text="BMW "/><Run Language="ru-ru" Text="3 серии"/>
        </TextBlock>
        <TextBlock Canvas.Left="278" Canvas.Top="287" Height="14" Width="22"
                   FontFamily="Book Antiqua" FontSize="7" FontWeight="Medium" Foreground="Black" Opacity="0.5">
            <Run Text="20"/><Run Language="ru-ru" Text="14"/>
        </TextBlock>
        <TextBlock Canvas.Left="278" Canvas.Top="300" Height="14" Width="52"
                   FontFamily="Book Antiqua" FontSize="8" FontWeight="Medium" Foreground="Black">
            <Run Language="ru-ru" Text="1 699"/><Run Text=" 000 P"/>
        </TextBlock>
        <Button Content="Добавить в корзину" Canvas.Left="289" Canvas.Top="318" Width="92" Height="21" FontSize="6" Background="White"/>
        <Button Canvas.Left="263" Canvas.Top="133" Width="188" Height="135" BorderBrush="{x:Null}" Background="{x:Null}" Foreground="{x:Null}"/>
        <Button Canvas.Left="397" Canvas.Top="314" Width="36" Height="31" BorderBrush="{x:Null}" Background="{x:Null}" Foreground="{x:Null}"
                RenderTransformOrigin="1.219,0.49">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.367"/>
                    <TranslateTransform X="-0.003" Y="-0.161"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Image Canvas.Left="400" Canvas.Top="315" Width="34" Height="30" Source="/mdi_heart (2).png" Stretch="Fill"/>

        <!-- Пустая кнопка в правом верхнем углу (возможно, закрытие) -->
        <Button Canvas.Left="749" Canvas.Top="3" Width="30" Height="30" BorderBrush="{x:Null}" Foreground="{x:Null}" Background="{x:Null}"/>
    </Canvas>
</Window>