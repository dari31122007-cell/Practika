<Window x:Class="Practika.Window9"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practika"
        mc:Ignorable="d"
        Title="Window9" Height="450" Width="800">
    <Grid Background="#FFE0E4F0">
        <!-- Верхняя панель -->
        <Rectangle HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="36" Fill="#FF19234D" Opacity="0.9"/>

        <!-- Логотип BMW -->
        <Button HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,-2,0,0" 
                Width="59" Height="40" BorderBrush="{x:Null}" Foreground="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="/BMW.png"/>
            </Button.Background>
        </Button>

        <!-- Текст "BMW" -->
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="72,6,0,0"
                   FontFamily="Book Antiqua" Text="BMW" FontSize="13" FontWeight="Medium" 
                   Foreground="#FFD7DBE8"/>

        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="72,20,0,0"
                   FontFamily="Book Antiqua" Text="Официальный дилер в СПБ" FontSize="9" 
                   FontWeight="Medium" Foreground="#FFD7DBE8"/>

        <!-- Адрес по центру -->
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,12,0,0"
                   FontFamily="Book Antiqua" Text="ул.Пушкина, 125" FontSize="10" 
                   FontWeight="Medium" Foreground="#FFD7DBE8"/>

        <!-- Кнопка "Профиль" -->
        <Button Content="Профиль" HorizontalAlignment="Right" VerticalAlignment="Top" 
                Margin="0,6,15,0" Width="92" Height="24" 
                BorderBrush="White" Foreground="#FFD7DAE8" FontSize="11" Background="{x:Null}"/>

        <!-- Иконка корзины (сердечко) -->
        <Button HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,2,130,0" 
                Width="32" Height="33" Background="{x:Null}" BorderBrush="{x:Null}">
            <Image Source="/mdi_heart (3).png" Stretch="Fill"/>
        </Button>

        <!-- Заголовок "Корзина" -->
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="63,76,0,0"
                   FontSize="18" FontWeight="Bold">
            <Run Language="ru-ru" Text="Корзина"/>
        </TextBlock>

        <!-- Фон карточки товара -->
        <Rectangle HorizontalAlignment="Left" VerticalAlignment="Top" 
                   Margin="63,133,0,0" Width="651" Height="162" 
                   Fill="White" Opacity="0.5" Stroke="#FF2D375E" RadiusX="20" RadiusY="20"/>

        <!-- Изображение автомобиля -->
        <Rectangle HorizontalAlignment="Left" VerticalAlignment="Top" 
                   Margin="72,143,0,0" Width="194" Height="142">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/0 10 (1).png"/>
            </Rectangle.Fill>
        </Rectangle>

        <!-- Информация о машине -->
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="297,152,0,0"
                   FontFamily="Book Antiqua" FontWeight="Medium" Foreground="Black" FontSize="14">
            <Run Text="BMW "/><Run Language="ru-ru" Text="3 серии"/>
        </TextBlock>

        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="297,170,0,0"
                   FontFamily="Book Antiqua" FontWeight="Medium" Foreground="Black" FontSize="9" Opacity="0.5">
            <Run Text="20"/><Run Language="ru-ru" Text="14"/>
        </TextBlock>

        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="297,186,0,0"
                   FontFamily="Book Antiqua" Text="2 л., 184 л.с., Бензин" 
                   FontWeight="Medium" Foreground="#FF19244E" FontSize="11"/>

        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="297,201,0,0"
                   FontFamily="Book Antiqua" Text="АКПП" 
                   FontWeight="Medium" Foreground="#FF19244E" FontSize="11"/>

        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="297,214,0,0"
                   FontFamily="Book Antiqua" Text="Полный привод" 
                   FontWeight="Medium" Foreground="#FF19244E" FontSize="11"/>

        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="297,228,0,0"
                   FontFamily="Book Antiqua" Text="188 826 км" 
                   FontWeight="Medium" Foreground="#FF19244E" FontSize="11"/>

        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="297,241,0,0"
                   FontFamily="Book Antiqua" Text="2 владельца" 
                   FontWeight="Medium" Foreground="#FF19244E" FontSize="11"/>

        <!-- Цена -->
        <TextBlock HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,201,100,0"
                   FontFamily="Book Antiqua" FontWeight="Medium" Foreground="Black" FontSize="14">
            <Run Language="ru-ru" Text="1 699"/><Run Text=" 000 ₽"/>
        </TextBlock>

        <!-- Кнопка "Удалить из корзины" -->
        <Button Content="Удалить из корзины" HorizontalAlignment="Right" VerticalAlignment="Top" 
                Margin="0,258,94,0" Width="105" Height="21" FontSize="10" Background="White"/>

        <!-- Невидимые кликабельные области -->
        <Button HorizontalAlignment="Left" VerticalAlignment="Top" 
                Margin="75,142,0,0" Width="188" Height="135" 
                BorderBrush="{x:Null}" Background="{x:Null}" Foreground="{x:Null}"/>

        <!-- Иконка "избранное" в карточке -->
        <Image HorizontalAlignment="Right" VerticalAlignment="Top" 
               Margin="0,147,96,0" Width="26" Height="26" 
               Source="/mdi_heart (2).png" Stretch="Uniform"/>

        <!-- Кнопка "Забронировать" по центру внизу -->
        <Button Content="Забронировать" HorizontalAlignment="Center" VerticalAlignment="Top" 
                Margin="0,343,0,0" Width="112" Height="26" FontSize="11" 
                Background="#FF2D375E" Foreground="White"/>

        <!-- Пустая кнопка-заглушка в правом верхнем углу (возможно, закрытие) -->
        <Button HorizontalAlignment="Right" VerticalAlignment="Top" 
                Margin="0,3,7,0" Width="20" Height="20" 
                BorderBrush="{x:Null}" Foreground="{x:Null}" Background="{x:Null}"/>
    </Grid>
</Window>