<Window x:Class="Practika.Window11"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Админка — BMW" Height="450" Width="800">
    <Grid Background="#FFE0E4F0">
        <!-- Верхняя панель -->
        <Rectangle HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="36" Fill="#FF19234D" Opacity="0.9"/>

        <!-- Логотип BMW -->
        <Button HorizontalAlignment="Left" 
        VerticalAlignment="Top" 
        Margin="10,-2,0,0"
        Width="59" 
        Height="40" 
        BorderBrush="{x:Null}" 
        Foreground="{x:Null}"
        Click="LogoButton_Click">
            <Button.Background>
                <ImageBrush ImageSource="/BMW.png"/>
            </Button.Background>
        </Button>

        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="72,6,0,0"
                   FontFamily="Book Antiqua" Text="BMW" FontSize="13" FontWeight="Medium" Foreground="#FFD7DBE8"/>
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="72,20,0,0"
                   FontFamily="Book Antiqua" Text="Официальный дилер в СПБ" FontSize="9" FontWeight="Medium" Foreground="#FFD7DBE8"/>

        <TextBlock x:Name="AdminFullNameText" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,6,30,0"
                   FontFamily="Book Antiqua" FontSize="10" FontWeight="Medium" Foreground="#FFD7DBE8" Text="Иванов И.И."/>
        <TextBlock HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,17,30,0"
                   FontFamily="Book Antiqua" FontSize="10" FontWeight="Medium" Foreground="#FFD7DBE8" Text="id_sotr"/>

        <Button Content="Настройки" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,4,173,0"
                Width="96" Height="25" Background="WhiteSmoke" BorderBrush="Black" Click="Button_Click"/>

        <Button HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,3,7,0"
                Width="20" Height="20" BorderBrush="{x:Null}" Foreground="{x:Null}" Background="{x:Null}"/>

        <!-- Кнопки навигации -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="90,69,0,0">
            <Button x:Name="BtnClients" Content="Клиенты" Width="96" Height="25" Background="#FFBFBFBF" BorderBrush="Black" Margin="0,0,5,0" Click="NavigationButton_Click"/>
            <Button x:Name="BtnCars" Content="Авто в наличии" Width="96" Height="25" Background="WhiteSmoke" BorderBrush="Black" Margin="0,0,5,0" Click="NavigationButton_Click"/>
            <Button x:Name="BtnEmployees" Content="Сотрудники" Width="96" Height="25" Background="WhiteSmoke" BorderBrush="Black" Margin="0,0,5,0" Click="NavigationButton_Click"/>
            <Button x:Name="BtnMessages" Content="Сообщения" Width="96" Height="25" Background="WhiteSmoke" BorderBrush="Black" Click="NavigationButton_Click"/>
        </StackPanel>

        <TextBlock x:Name="SectionTitle" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="106,118,0,0"
                   FontFamily="Book Antiqua" FontSize="13" FontWeight="Bold" Foreground="Black" Text="Клиенты"/>

        <!-- Таблица -->
        <DataGrid x:Name="MainDataGrid"
                  Margin="91,155,100,100"
                  AutoGenerateColumns="False"
                  SelectionUnit="FullRow"
                  CanUserAddRows="False"
                  IsReadOnly="True"/>

        <!-- Кнопка "Редактировать" -->
        <Button x:Name="EditButton" 
                Content="Редактировать" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Bottom"
                Margin="0,0,0,20"
                Width="156" 
                Height="25" 
                Background="WhiteSmoke" 
                BorderBrush="Black"
                Click="EditButton_Click"/>
        
        
    </Grid>
</Window>