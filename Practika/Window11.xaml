<Window x:Class="Practika.Window11"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Админка — BMW" Height="450" Width="800">
    <Grid Background="#FFE0E4F0">
        <!-- Верхняя панель -->
        <Rectangle HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="36" Fill="#FF19234D" Opacity="0.9"/>

        <!-- Логотип BMW -->
        <Button HorizontalAlignment="Left" 
        VerticalAlignment="Top" 
        Margin="10,-2,0,0"
        Width="59" 
        Height="40" 
        BorderBrush="{x:Null}" 
        Foreground="{x:Null}"
        Click="LogoButton_Click">
            <Button.Background>
                <ImageBrush ImageSource="/BMW.png"/>
            </Button.Background>
        </Button>

        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="72,6,0,0"
                   FontFamily="Book Antiqua" Text="BMW" FontSize="13" FontWeight="Medium" Foreground="#FFD7DBE8"/>
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="72,20,0,0"
                   FontFamily="Book Antiqua" Text="Официальный дилер в СПБ" FontSize="9" FontWeight="Medium" Foreground="#FFD7DBE8"/>

        <Button HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,3,7,0"
                Width="20" Height="20" BorderBrush="{x:Null}" Foreground="{x:Null}" Background="{x:Null}"/>

        <!-- Кнопки навигации -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="90,69,0,0">
            <Button x:Name="Clients" Content="Клиенты" Width="96" Height="25" Background="#FFBFBFBF" BorderBrush="Black" Margin="0,0,5,0" Click="NavigationButton_Click"/>
            <Button x:Name="Cars" Content="Авто в наличии" Width="96" Height="25" Background="WhiteSmoke" BorderBrush="Black" Margin="0,0,5,0" Click="NavigationButton_Click"/>
            <Button x:Name="Employees" Content="Сотрудники" Width="96" Height="25" Background="WhiteSmoke" BorderBrush="Black" Margin="0,0,5,0" Click="NavigationButton_Click"/>
            <Button x:Name="Messages" Content="Сообщения" Width="96" Height="25" Background="WhiteSmoke" BorderBrush="Black" Click="NavigationButton_Click"/>
        </StackPanel>

        <TextBlock x:Name="SectionTitle" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="106,118,0,0"
                   FontFamily="Book Antiqua" FontSize="13" FontWeight="Bold" Foreground="Black" Text="Клиенты"/>

        <!-- Таблица -->
        <DataGrid x:Name="MainDataGrid"
                  Margin="91,155,100,100"
                  AutoGenerateColumns="False"
                  ItemsSource="{Binding users}"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="id" Binding="{Binding id}"/>
                <DataGridTextColumn Header="Фамилия" Binding="{Binding surname}"/>
                <DataGridTextColumn Header="Имя" Binding="{Binding name}"/>
                <DataGridTextColumn Header="Отчество" Binding="{Binding patronymic}"/>
                <DataGridTextColumn Header="Номер телефона" Binding="{Binding phone}"/>
                <DataGridTextColumn Header="Дата рождения" Binding="{Binding Date_of_birth}"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Кнопка "Редактировать" -->
        <Button x:Name="EditButton" 
                Content="Редактировать" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Bottom"
                Margin="0,0,0,20"
                Width="156" 
                Height="25" 
                Background="WhiteSmoke" 
                BorderBrush="Black"
                Click="EditButton_Click"/>
        <Button
            Content="Выход" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top"
            Margin="686,6,0,0"
            Width="87" 
            Height="25" 
            Background="WhiteSmoke" 
            BorderBrush="Black"
            Click="Button_Click1"/>


    </Grid>
</Window>